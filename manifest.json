{
  "manifest_version": 3,
  "name": "OCR & Translation Toolbox",
  "version": "1.0",
  "description": "Extract text from images, screenshots, or PDFs, then offer instant translation or AI-based simplification.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://text.pollinations.ai/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://cdn.tailwindcss.com https://cdnjs.cloudflare.com https://cdn.jsdelivr.net; object-src 'self'"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "OCR & Translation Toolbox"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
